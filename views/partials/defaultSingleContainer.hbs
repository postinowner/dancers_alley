<div class="default-container x-grid-12 nopad">

	{{#if image}}
		<div class="default-container--image x-grid-12 nopad">
			<img src="static/images/{{image}}" class="default-container--image-content x-grid-12 nopad">
			{{#if imageCaption}}
				<div class="default-container--image-caption x-grid-12 nopad"> {{imageCaption}} </div>
			{{/if}}
		</div>
	{{/if}}

	{{#if text}}
		<div class="default-container--text x-grid-12 nopad">
			<div class="default-container--text-content x-grid-12 nopad"> {{{text}}} </div>
		</div>
	{{/if}}

</div>